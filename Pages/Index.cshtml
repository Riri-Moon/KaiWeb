@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div id="content">


    <div class="text-center" style="margin-left:10%; align-content:center">
 

        <div id="carouselExampleControls" class="carousel slide" style="background-color: lightgray; width:100%; position:relative;" data-ride="carousel">
            <div class="carousel-inner">

                <div class="carousel-item active">
                    <img src="/IMG/untitled.jpg" class="d-block w-100" style=" height: 240px" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/IMG/trnava.29e07ae9.jpg" class="d-block w-100" style=" height: 240px" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/IMG/fpv.png" class="d-block w-100" style="height:240px" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/IMG/erasmus-header-960_tcm44-94793.jpg" class="d-block w-100" style="height:240px" alt="...">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <hr />

        @*<video style="margin-top:0px; width:60%" autoplay="" muted="" loop="loop">
                <source src="~/IMG/informatika_Trnava_360p.mp4" type="video/ogg">
                Váš prehliadač nepodporuje HTML5 video.
            </video>*@
        <hr />

        <div class="text-center">
            <h1>Aktuality</h1>

        </div>
        <div class="justify-content-center">
            @{
                var list = ViewData["Results"] as List<string>;

                var count = list.Count / 4;
                if (count > 5)
                    count = 5;
                for (var i = 0; i < count; i++)
                {
                    var first = list[0];
                    var second = list[1];
                    var third = list[2];
                    var fourth = list[3];

                    list.RemoveRange(0, 4);

                    <div class="container align-content-center" style="height:auto; margin-left:7%; width:auto; font-weight:bold ">
                        <div class="toast show" role="alert" aria-live="assertive" aria-atomic="true" style="position:relative; margin-top:20px; margin-bottom:20px; max-height:300px;max-width:800px">
                            <div class="toast-header align-content-center">
                                <strong class="mr-auto text-center" style="text-align:center">@first</strong>
                                <p class="mr-auto toast-body text-left text-xl-left" style="text-align:left;">@second</p>

                                <small>@fourth.Remove(10)</small>
                                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="toast-body">
                                @third
                            </div>
                        </div>
                    </div>
                }

            }
        </div>
        
    </div>
</div>





